# BGC App - Environment Variables Template
# Copy this file to .env and fill with your actual credentials
# NEVER commit .env to git!

# ==========================================
# PostgreSQL Database
# ==========================================
POSTGRES_USER=bgc
POSTGRES_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
POSTGRES_DB=bgc

# ==========================================
# PgAdmin
# ==========================================
PGADMIN_DEFAULT_EMAIL=admin@bgc.dev
PGADMIN_DEFAULT_PASSWORD=<CHANGE_ME_ADMIN_PASSWORD>

# ==========================================
# BGC API Configuration
# ==========================================
DB_HOST=db
DB_PORT=5432
DB_USER=bgc
DB_PASS=<SAME_AS_POSTGRES_PASSWORD>
DB_NAME=bgc
PORT=8080

# Optional: Scope configuration
# SCOPE_CHAPTERS=02,08,84,85
# SOM_BASE=0.015
# SOM_AGGRESSIVE=0.03

# ==========================================
# BGC Web (Next.js)
# ==========================================
API_URL=http://bgc-api:8080
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# ==========================================
# Security Notes
# ==========================================
# 1. Generate strong passwords with: openssl rand -base64 32
# 2. Use different passwords for each environment (dev/staging/prod)
# 3. Never use 'password', '123456', or simple words
# 4. Rotate passwords every 90 days
